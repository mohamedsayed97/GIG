@model ICP_ABC.Areas.Nationalities.Models.CreateViewModel

@{
    ViewBag.Title = "Custumer Type Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Type Setup</h2>

@using (Html.BeginForm("", "", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div style="width:95%;height:450px;overflow-y:scroll;overflow-x:hidden;border:solid 1px #ddd;margin:3px;padding:5px;">
    @Html.AntiForgeryToken()

    <p class="text-danger">@Html.ValidationSummary(true)</p>

    <div class="row">

        <div class="form-group col-md-5 ">
            <label for="inputEmail4">Customer Type Code</label>
            @*@Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", Value = ViewData["currr"], @readonly = "readonly", Text = ViewData["currr"] } })*@
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>

    </div>

    <div class="row">
        <div class="form-group col-md-5 ">
            <label for="inputEmail4">Customer Type</label>
            @*@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })*@
            <div class="col-md-9">
                @Html.TextBox("ssss", "", new { @class = "form-control dropdown-toggle", disabled = "disabled" })
            </div>
        </div>
    </div>
</div>
    
    <div class="text-center" style="padding-top:15px;">
        <div class="btn-group col-md-5" role="group" aria-label="Basic example">
            <a href="~/Nationalities/Nationality/Create" class="btn btn-outline-primary"><i class="fa fa-group"></i> Add Nationality</a>
            <a href="~/Nationalities/Nationality/Search" class="btn btn-outline-primary"><i class="fa fa-search"></i> Search</a>
            <a href="~/Home/Home/Index" class="btn btn-outline-primary"><i class="fa fa-home"></i> Back to Home</a>

        </div>
    </div>
}