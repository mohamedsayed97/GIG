@model ICP_ABC.Areas.CustTypes.Models.CreateViewModel

@{
    ViewBag.Title = "Customer Types Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Customer Type </h2>

@using (Html.BeginForm("Edit", "CustType", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div style="width:95%;height:450px;overflow-y:scroll;overflow-x:hidden;border:solid 1px #ddd;margin:3px;padding:5px;">

    @Html.AntiForgeryToken()

    <p class="text-danger">@Html.ValidationSummary(true)</p>

    <div class="row">

        <div class="form-group col-md-5 ">
            <label for="inputEmail4">Customer Type Code</label>
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="row">
        <div class="form-group col-md-5 ">
            <label for="inputEmail4">Customer Type</label>
            @*@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })*@
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
        </div>
    <div class="text-center" style="padding-top:15px;">

        <div class="btn-group col-md-5" role="group" aria-label="Basic example">
            <button type="submit" class="btn btn-outline-primary"><i class="fa fa-group"></i> Apply</button>
            <a href="~/CustTypes/CustType/Index" class="btn btn-outline-primary"><i class="fa fa-times-circle"></i> Cancel</a>
        </div>
    </div>
}