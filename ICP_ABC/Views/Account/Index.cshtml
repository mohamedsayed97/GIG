                <input type="checkbox" name="Branch Right" disabled />
            </div>
        </div>
    </div>

    <div class="row">
        
        <div class="btn-group col-md-5" role="group" aria-label="Basic example">
            <a href="~/Account/Register" class="btn btn-outline-primary"><i class="fa fa-user"></i> Add New User</a>
            <a href="~/Account/Search" class="btn btn-outline-primary"><i class="fa fa-search"></i> Search</a>
            <a href="~/Home/Index" class="btn btn-outline-primary"><i class="fa fa-home"></i> Back To Home</a>

