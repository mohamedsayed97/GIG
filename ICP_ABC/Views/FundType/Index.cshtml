@model ICP_ABC.Reports.FundType.Model.FundTypeVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("FundType", "FundType"))
{
    <div style="width:95%;height:450px;overflow-y:scroll;overflow-x:hidden;border:solid 1px #ddd;margin:3px;padding:5px;">
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group col-lg-4 col-md-4">
                @* <label>Fund Name</label>*@
                <span class="input-group-addon" id="basic-addon1" aria-describedby="sizing-addon1">Fund Name</span>
                @Html.DropDownListFor(model => model.Fund, new SelectList(Model.Funds, "code", "name"), "All Funds", new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(model => model.Funds, "", new { @class = "text-danger" })
                @*@Html.DropDownListFor(m => m.Funds, new SelectList(Model.Funds, "code", "name"), "All Funds", new { @class = "form-control" })*@
            </div>

        </div>

        <div class="row">
            <div class="form-group col-lg-4 col-md-4">
                @* @Html.LabelFor(model => model.ToDate, htmlAttributes: new { @class = "control-label col-md-4" })*@
                <span class="input-group-addon" id="basic-addon1" aria-describedby="sizing-addon1">From Date</span>
                <div class="input-group">
                    @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="row">
            <div class="form-group col-lg-4 col-md-4">
                @*@Html.LabelFor(model => model.FromDate, htmlAttributes: new { @class = "control-label col-md-4" })*@
                <span class="input-group-addon" id="basic-addon1" aria-describedby="sizing-addon1">To Date</span>
                <div class="input-group">
                    @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger" })
            </div>
        </div>





    </div>
    <div class="text-center" style="padding-top:15px;">
        <button type="submit" class="btn btn-primary" aria-pressed="false">Preview</button>
    </div>
}


