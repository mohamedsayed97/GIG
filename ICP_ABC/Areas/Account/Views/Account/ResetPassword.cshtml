@model ICP_ABC.Models.ResetPasswordViewModel

@{
                /**/

                /**/

                ViewBag.Title = "Change Expired Password";
}

<h2>Change Expired Passwordd</h2>

<div class="row">
    <div class="col-lg-3 h-100"></div>
    <div class="col-md-9">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div style="width:95%;height:450px;overflow-y:scroll;overflow-x:hidden;border:solid 1px #ddd;margin:3px;padding:5px;">


            @Html.AntiForgeryToken()

            <p class="text-danger">@Html.ValidationSummary(true)</p>

            <div class="row">

                <div class="form-group col-md-4 ">
                    <label for="inputEmail4">User Name</label>
                    @*@Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", Value = ViewData["currr"], @readonly = "readonly", Text = ViewData["currr"] } })*@
                    <div class="">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control",@readonly="readonly" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-md-4 ">
                    <label for="inputEmail4">Old Password</label>
                    @*@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })*@
                    <div class="">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>

            <div class="row">


                
                <div class="form-group col-md-4">
                    <label for="inputPassword4">Confirm Password</label>
                    @*@Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })*@
                    <div class="">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            </div>            

            <div class="text-center" style="padding-top:15px;">

                <div class="btn-group col-md-9" role="group" aria-label="Basic example">
                    <button type="submit" class="btn btn-outline-primary">Apply</button>
                    @Html.ActionLink("Back", "Index", "Account", new { @class = " btn btn-outline-primary" })

                </div>
            </div>
        }
    </div>
</div>

@section scripts{

    @Scripts.Render("~/bundles/jqueryval")
}