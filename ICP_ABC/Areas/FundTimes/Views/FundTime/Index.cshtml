@model ICP_ABC.Areas.FundTimes.Models.CreateViewModel

@{ ViewBag.Title = " Fund Time";
                Layout = "~/Views/Shared/_Layout.cshtml"; }
<style>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css" >
</style>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
<h2>Fund Time Setup</h2>

@using (Html.BeginForm("", "", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

<div style="width:95%;height:375px;overflow-y:scroll;overflow-x:hidden;border:solid 1px #ddd;margin:3px;padding:5px;">

    @Html.AntiForgeryToken()

    <p class="text-danger">@Html.ValidationSummary(true)</p>
    <div class="horizontal">
        <div class="row">

            <div class="form-group col-md-4 ">
                <label for="inputEmail4">Fund Name</label>
                @*@Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", Value = ViewData["currr"], @readonly = "readonly", Text = ViewData["currr"] } })*@
                <div class="col-md-7">
                    @Html.Editor("FundId", new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled" } })


                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4 ">
                <label for="inputEmail4">Fund Time</label>
                @*@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })*@
                <div class="col-md-7">
                    @*<input  type="datetime" name="Time" class="timepicker form-control" />*@
                    @Html.Editor("Time", new { htmlAttributes = new { @class = "form-control form-control-sm", disabled = "disabled" } })
                </div>
            </div>

        </div>
    </div>

</div>

                <div class="text-center" style="padding-top:15px;">

                    <div class="col-md-3"></div>
                    <div class="btn-group col-md-5" role="group" aria-label="Basic example">
                        <a href="~/FundTimes/FundTime/Create" class="btn btn-outline-primary"><i class="fa fa-plus"></i> Add New Fund-Time</a>
                        <a href="~/FundTimes/FundTime/Search" class="btn btn-outline-primary"><i class="fa fa-search"></i> Search</a>
                        <a href="~/Home/Home/Index" class="btn btn-outline-primary"><i class="fa fa-home"></i> Back To Home</a>

                    </div>
                </div>}

@section scripts
    {
    <script>
        $(function () {
            $('.timepicker').timepicker({
                timeFormat: 'HH:mm p',
                interval: 60,
                minTime: '9',
                maxTime: '6:00pm',
                //defaultTime: ViewData["Time"],
                startTime: '09:00',
                dynamic: false,
                dropdown: true,
                scrollbar: true
            });
        });

    </script>
    @*<script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>*@
}
